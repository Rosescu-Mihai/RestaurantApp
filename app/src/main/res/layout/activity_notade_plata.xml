<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_background"
    android:orientation="vertical"
    tools:context=".NotadePlataActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Nota de Plata"
        android:textAlignment="center"
        android:textSize="50dp"
        android:fontFamily="@font/pacifico"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_inchide_nota"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:layout_marginVertical="5dp" />

        <Spinner
            android:id="@+id/spin_metoda_plata"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/edit_text_bg"
            android:textAlignment="center"
            android:layout_marginVertical="5dp"
            android:autofillHints="Alege metoda de plata."/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_salveaza_nota"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginVertical="5dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_item_preparate"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        android:background="@drawable/edit_text_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Total:"
            android:textSize="30dp"
            android:fontFamily="@font/pacifico"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/total_nota"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="0"
            android:textSize="30dp"
            android:fontFamily="@font/pacifico"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_meniu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:layout_gravity="center"
        android:text="Acceseaza Meniu"
        android:fontFamily="@font/pacifico"
        android:layout_marginVertical="10dp"/>

</LinearLayout>