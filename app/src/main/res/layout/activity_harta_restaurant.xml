<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HartaRestaurantActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/pink">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@color/pink"
            android:id="@+id/lista_noteDePlata_angajat"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refresh_harta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_baseline_refresh_24"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="@drawable/fundal_bun_scris2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/masa_drepthugiulara_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_dreptunghiulara_1"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="10dp"/>
            <ImageView
                android:id="@+id/masa_rotunda_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_rotunda_1"
                android:layout_marginStart="170dp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/scaun_bar_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/scaun_bar_1"
                android:layout_marginStart="100dp"/>
            <ImageView
                android:id="@+id/scaun_bar_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/scaun_bar_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/masa_rotunda_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_rotunda_1" />
            <ImageView
                android:id="@+id/masa_drepthugiulara_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_dreptunghiulara_1"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/masa_drepthugiulara_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_dreptunghiulara_1"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/masa_rotunda_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_rotunda_1" />
            <ImageView
                android:id="@+id/masa_drepthugiulara_4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_dreptunghiulara_1"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/masa_drepthugiulara_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/masa_dreptunghiulara_1"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/masa_rotunda_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/masa_rotunda_1"/>
        <ImageView
            android:id="@+id/masa_rotunda_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/masa_rotunda_1"/>

    </LinearLayout>

</LinearLayout>